<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="600.0" maxWidth="700.0" minHeight="400.0" minWidth="650.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller">
   <bottom>
      <TextField fx:id="userInput" onKeyPressed="#handleEnterPressed" prefHeight="40.0" prefWidth="200.0" promptText="Enter Command" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <TableView fx:id="taskTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="indexColumn" prefWidth="100.0" text="Index" />
          <TableColumn fx:id="taskColumn" prefWidth="350.0" text="Task Name" />
            <TableColumn fx:id="deadlineColumn" prefWidth="200.0" text="Date Due" />
        </columns>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </TableView>
   </center>
   <top>
      <Label text="Adult TaskFinder" BorderPane.alignment="CENTER">
         <font>
            <Font name="Century Gothic Bold Italic" size="30.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0" startX="1.0">
               <stops>
                  <Stop color="#060f28" />
                  <Stop color="#1657bf" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
